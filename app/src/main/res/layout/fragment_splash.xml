<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbe0b"
    tools:context=".presentation.fragments.splash.SplashFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBlinkit"
                android:layout_width="wrap_content"
                android:layout_height="91dp"
                android:text="@string/blinkit"
                android:textColor="@color/black"
                android:textSize="78sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSplashc"
                android:layout_width="wrap_content"
                android:layout_height="91dp"
                android:text="@string/it"
                android:textColor="@color/green"
                android:textSize="78sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Зайди и перекуси"
            android:fontFamily="@font/recoleta"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <View
            android:layout_width="234dp"
            android:layout_height="2.60dp"
            android:layout_marginTop="26dp"
            android:layout_weight="3"
            android:background="#7B7777" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:letterSpacing="0.1"
            android:text="A TOLYAN COMPANY"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>